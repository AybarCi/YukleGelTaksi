{
  "expo": {
    "name": "Yükle Gel Taksi",
    "slug": "yukle-gel-taksi",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/logo1.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,

    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router", 
      "expo-font", 
      "expo-web-browser",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Bu uygulama konum bilginizi kullanarak size en yakın sürücüleri bulur."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Bu uygulama yük fotoğraflarını yüklemek için galeri erişimi gerektirir.",
          "cameraPermission": "Bu uygulama yük fotoğraflarını çekmek için kamera erişimi gerektirir."
        }
      ]
    ],
    "android": {
      "package": "com.yuklegelltaksi.app",
      "versionCode": 1,
      "icon": "./assets/images/logo1.png",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#FFD700",
        "monochromeImage": "./assets/images/adaptive-icon.png"
      },
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyCrQmf3XUB_QRY4jkxQqIbRUbYAVkhyHHA"
        }
      }
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yuklegelltaksi.app",
      "buildNumber": "1",
      "icon": "./assets/images/logo1.png",
      "infoPlist": {
        "NSCameraUsageDescription": "Bu uygulama yük fotoğraflarını çekmek için kamera erişimi gerektirir.",
        "NSPhotoLibraryUsageDescription": "Bu uygulama yük fotoğraflarını yüklemek için galeri erişimi gerektirir."
      },
      "config": {
        "googleMapsApiKey": "AIzaSyBh078SvpaOnhvq5QGkGJ4hQV-Z0mpI81M"
      }
    },
    "experiments": {
      "typedRoutes": true
    }
  }
}
